{
    "name": "ink",
    "displayName": "ink",
    "description": "Inkle's Ink scripting language support for Visual Studio Code",
    "version": "1.2.1",
    "repository": {
        "type": "git",
        "url": "https://github.com/sequitur/ink-vscode.git"
    },
    "author": {
        "name": "Bruno Dias",
        "email": "bruno.r.dias@gmail.com"
    },
    "license": "MIT",
    "publisher": "bruno-dias",
    "engines": {
        "vscode": "^1.16.0"
    },
    "categories": [
        "Languages"
    ],
    "activationEvents": [
        "onLanguage:ink"
    ],
    "main": "./out/src/extension",
    "keywords": [
        "ink",
        "inkle",
        "syntax"
    ],
    "icon": "images/icon.png",
    "galleryBanner": {
        "color": "#BEBEBE",
        "theme": "light"
    },
    "contributes": {
        "languages": [
            {
                "id": "ink",
                "aliases": [
                    "Ink",
                    "ink"
                ],
                "extensions": [
                    ".ink",
                    ".ink2"
                ],
                "configuration": "./language-configuration.json"
            }
        ],
        "grammars": [
            {
                "language": "ink",
                "scopeName": "source.ink",
                "path": "./syntaxes/ink.tmLanguage"
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install"
    },
    "devDependencies": {
        "@types/node": "^8.0.34",
        "typescript": "^2.5.3",
        "vscode": "^1.1.6"
    }
}